import processing.core.PApplet;
import processing.core.PVector;


public class Rectangle extends Terrain
{

	enum Corner {TOP_LEFT, TOP_RIGHT, BOTTOM_LEFT, BOTTOM_RIGHT, NONE};
	
	int width;
	int height;
	
	Corner grabbed;
	
	Rectangle(PApplet _parent, PVector _position, int w, int h)
	{
		super(_position, _parent);
		
		width = w;
		height = h;
		
	}
	
	void draw()
	{
		parent.stroke(0);
		parent.fill(127);
		parent.rect(position.x, position.y, width, height);
	}
	
	void mouseClicked()
	{
		
	}
	
	void checkCorner(int mouse, float position, Corner corner)
	{
		
		
	}
	
}